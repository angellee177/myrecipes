<%= render 'shared/errors', obj: @ingredient %>
<%# Form  %>
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <%= form_for(@ingredient, :html => {class: "form-horizontal", role: "form"}) do |f| %>
                <%# Recipe Title Column %>
                <div class="form-group">
                    <div class="control-label col-md-2">
                        <%= f.label :name %>
                    </div>
                    <div class="col-md-8">
                        <%= f.text_field :name, class:'form-control', type:'text', placeholder:'enter your ingredient name', autofocus: true%>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <%= f.submit(@ingredient.new_record? ? "Add Ingredient" : "Update Ingredient",
                          class: "btn btn-primary btn-lg btn-xlarge") %>
                    </div>
                </div>
            <% end %>
            <div class="col-md-4 col-md-offset-4">
                <%= link_to 'Cancel and Back to Recipe List', recipes_path %>
            </div>
        </div>
    </div>
</div>