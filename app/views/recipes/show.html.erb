<%= render 'shared/page_title', title: @recipe.name %>
<div class="container">
    <div class="well col-md-8 col-md-offset-2 " >
        <h4 class="center description" style="text-align:center">
            <strong>
                Steps :
            </strong>
        </h4>
        <hr/>
        <%= sanitize(@recipe.description) %>
        <hr/>
        <div class="pull-right">
            <p class="center">
                <em>Created By:</em>
            </p>
            <p class="center">
                <%= link_to gravatar_for(@recipe.chef), recipes_path %>
            </p>
            <p class="center">
                <small><%= @recipe.chef.chef_name.capitalize %></small>
                <div class="pull-right">
                    <div class="pull-right">Created:<%= time_ago_in_words(@recipe.created_at)%> ago
                </div>
            </p>
        </div>
    </div>
</div>

