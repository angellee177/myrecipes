<%= render 'shared/page_title', title:'Reset Password'%>
<div class="container">
    <%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url: password_resets_path) do |f| %>
    <%# Chef Email Column %>
        <div class="row" style="padding-top:20px">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <div class="form-group">
                    <%= f.password_field :password, class:'form-control', placeholder: ' New Password', style:"text-align:center"%>
                    <%= f.hidden_field :token, value: @token%>
                </div>
            </div>
            <div class="col-md-3"></div>
        </div>
    <%# Submit Button %>
        <div class="form-group">
            <div class="row text-center">
                <div class="col-md-5"></div>
                <div class="col-md-2">
                     <%= f.submit "Reset Password", class:'btn btn-danger btn-lg btn-xlarge'%>
                </div>
                <div class="col-md-5"></div>
            </div>
        </div>
    <% end %>
</div>