<%= render 'shared/errors', obj: @chef %>
<%# Form  %>
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <%= form_for(@chef, :html => {class: "form-horizontal", role: "form"}) do |f| %>
                <%# Chef Name Column %>
                <div class="form-group">
                    <div class="control-label col-md-2">
                        <%= f.label :chef_name %>
                    </div>
                    <div class="col-md-8">
                        <%= f.text_field :chef_name, class:'form-control', type:'text', placeholder:'Enter Your Recipe', autofocus: true%>
                    </div>
                </div>
                <%# Chef Email Column %>
                <div class="form-group">
                    <div class="control-label col-md-2">
                        <%= f.label :email %>
                    </div>
                    <div class="col-md-8">
                        <%= f.email_field :email, class:'form-control', placeholder:'Enter your Email Here'%>
                    </div>
                </div>
                <%# Chef Password Column %>
                <div class="form-group">
                    <div class="control-label col-md-2">
                        <%= f.label :password %>
                    </div>
                    <div class="col-md-8">
                        <%= f.password_field :password, class:'form-control', placeholder:'Enter your Password'%>
                    </div>
                </div>
                <%# Chef Password Confirmation Column %>
                <div class="form-group">
                    <div class="control-label col-md-2">
                        <%= f.label :password_confirmation, "Confirm Password" %>
                    </div>
                    <div class="col-md-8">
                        <%= f.password_field :password_confirmation, class:'form-control', placeholder:'Confirm your Password Here'%>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <%= f.submit "Create new Account", class:'btn btn-primary btn-lg'%>
                    </div>
                </div>
            <% end %>
            <div class="col-md-4 col-md-offset-4">
                <%= link_to 'Cancel and Back to Recipe List', recipes_path %>
            </div>
        </div>
    </div>
</div>